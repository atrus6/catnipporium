---
layout: layouts/base.njk
---
<section class="hero header-image is-large" 
  style="background-image: url({{ herourl }});
         background-position: center center;
	 background-repeat: no-repeat;
	 background-attachment: fixed;
	 background-size: cover;
	 background-color: #999;">
<div class="hero-body">
<h2 class="title is-2" style="text-stroke: 2px black; -webkit-text-stroke: 2px black;">{{ title }}</h2>
<h3 class="subtitle is-3" style="text-stroke: 1px black; -webkit-text-stroke: 1px black;">{{ subtitle }}</h3>
</div>
</section>
<section class="section">
  {{ content | safe }}
</section>

