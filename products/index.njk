---
layout: layouts/content.njk
---
<h1>Current Pillow Stock</h1>
<div class="columns is-multiline">
{% for pillow in catalog %}
<div class="column is-one-fifth">
<div class="card">
  <div class="card-image">
  	<figure class="image">
        <img src="/static/img/{{ pillow.Image }}" alt="{{ pillow.Name }}">
	</figure>
  </div>
  <div class="card-content">
    <p class="title is-4">{{ pillow.Name }}</p>
    <p class="subtitle is-6">Quantity Available: {{ pillow.Quantity }}</p>
  </div>
</div>
</div>
{% endfor %}
</div>
